<Page x:Class="InventoryPC.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:InventoryPC.ViewModels"
      xmlns:local="clr-namespace:InventoryPC.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Background="#1E1E1E">
    <Grid>
        <Border Background="#23272F" CornerRadius="16" Padding="40" Margin="120">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="340">
                <TextBlock Text="Вход в систему" 
                           Foreground="#FFF" 
                           FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>
                <TextBlock Text="Логин:" 
                           Foreground="#B0B0B0" 
                           FontSize="15" 
                           Margin="0,0,0,8"/>
                <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" 
                         Height="36"
                         FontSize="16"
                         Padding="10,0"
                         Background="#2E2E2E" 
                         Foreground="#FFF" 
                         BorderBrush="#3A3A3A"
                         BorderThickness="1"
                         Margin="0,0,0,8"/>
                <TextBlock Text="Пароль:" 
                           Foreground="#B0B0B0" 
                           FontSize="15" 
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="36"
                             FontSize="16"
                             Padding="10,0"
                             Background="#2E2E2E" 
                             Foreground="#FFF" 
                             BorderBrush="#3A3A3A"
                             BorderThickness="1"
                             Margin="0,0,0,8"/>
                <Button Content="Войти" 
                        Command="{Binding LoginCommand}" 
                        CommandParameter="{Binding ElementName=PasswordBox}"
                        Height="38"
                        FontSize="16"
                        Background="#4F8EF7"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        IsDefault="True"
                        HorizontalAlignment="Stretch"
                        Margin="0,8,0,0"/>
                <Button Content="Войти без авторизации" 
                        Command="{Binding NavigateToFirstRunCommand}" 
                        Height="38"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="#B0B0B0"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>